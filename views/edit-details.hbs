    <option>Babysitting</option>
    <option>Cooking</option>
    <option>Web development</option>
    <option>Cleaning</option>
    <option>Woodwork and general repairs</option>
    <option>Gardening</option>
    <option>Ironing</option>
    <option>Homework help and tutoring</option>
    <option>Hairdressing</option>
    <option>Car washing (inside and out)</option>
  </select>
</div>
  </div>
</div>
<hr>
<div class="panel panel-info">
  <div class="panel-heading">
    <h5 class="panel-title">Recent Jobs</h3>
  </div>
  <div class="panel-body">
    <div class="list-group">
  <li class="list-group-item">Job Description: {{selectDescription}}</li>
  <li class="list-group-item">Additional Information: {{additionalInformation}}</li>
  <li class="list-group-item">Assigned to: {{skillProviderName}}</li>
  <li class="list-group-item">Job Owner: {{jobOwnerName}}</li>
  <li class="list-group-item">Contact Details:<br><br>{{jobOwnerTelephone}}<br><br>{{jobOwnerEmail}}</li>
  <li class="list-group-item">Job Status: {{jobstatus}}</li>
      <!--{{#each Job}}--><!--{{/each}}-->
</div>
  </div>
</div>
<hr>
<div class="panel panel-info">
  <div class="panel-heading">
    <h5 class="panel-title">Completed Jobs</h3>
  </div>
  <div class="panel-body">
    <div class="list-group">
  <a href=# class="list-group-item">{{this.jobDescription}}</a>
  <!--{{#each completedJob}}--><!--linking to job details page by id
      {{/each}}-->
</div>
  </div>
</div>
<hr>
</form>

