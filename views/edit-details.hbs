<form action="/{{_id}}/update" method="post">
<div class="panel panel-info">
  <div class="panel-heading">
    <h5 class="panel-title">User Details</h3>
  </div>
 <div class="panel-body">
    <div class="list-group">
  <div>
  <label for="name-input">Name:</label>
  <input type="text" name="name" id="name-input" value="{{userInSession.name}}"/>
  </div>
  <div>
  <label for="email-input">Email address:</label>
  <input type="text" name="email" id="email-input" value="{{userInSession.email}}" />
  </div>
  <div>
  <label for="telephone-input">Telephone:</label>
  <input type="text" name="telephone" id="telephone-input" value="{{userInSession.telephone}}" />
  </div>
  <div>
  <label for="address-input">Address:</label>
  <input type="text" name="address" id="address-input" value="{{userInSession.address}}" />
  </div>
</div>
  </div>
</div>
<hr>
<div class="panel panel-info">
  <div class="panel-heading">
    <h5 class="panel-title">Current Skills</h3>
  </div>
  <div class="panel-body">
    <div class="form-group">
  <label for="skill1-input">Skill 1:</label>
