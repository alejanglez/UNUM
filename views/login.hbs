<body id="splash">
  <div>
<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
        <img class="logo" id="unum-logo" src='/images/UNUM - logo.png'>
			</div>
<div class="card-body">
  <form action="/login" method="POST" class="form-login">
	  <div class="input-group form-group">
		  <div class="input-group-prepend">
			  <span class="input-group-text"><i class="fas fa-user"></i></span>
		  </div>
	<!--<input type="text" class="form-control" placeholder="username">-->
    <input type="email" class="form-control" name="email" id="email-input" placeholder="name@example.com">
	  </div>
	  <div class="input-group form-group">
		<div class="input-group-prepend">
			<span class="input-group-text"><i class="fas fa-key"></i></span>
		</div>
	<!--<input type="password" class="form-control" placeholder="password">-->
    <input type="password" class="form-control" name="passwordHash" id="password-input" placeholder="**********">
	  </div>
	  <div>
		  <input type="submit" value="Login" class="btn float-right login_btn">
	  </div>
    {{#if errorMessage}}
      <p class="alert alert-primary" role="alert">{{errorMessage}}</p>
    {{/if}}
	  </form>
    </div>
    </div>
    </div>
    </div>
    </div>
</body>


