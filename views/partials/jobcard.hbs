<div class="col-md-4">
  <a class="card-link" href="/jobdetails/{{id}}">
    <div class="card">
      <img class="card-img-top" src={{this.image}} alt={{this.name}} />
      <div class="card-body">
        <h5 class="card-title">{{this.selectDescription}}</h5>
        <p class="card-text">{{this.additionalInformation}}</p>
      </div>
    </div>
  </a>
</div>